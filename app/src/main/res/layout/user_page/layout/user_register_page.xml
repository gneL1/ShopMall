<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <TextView
        android:text="新用户注册"
        android:textSize="30dp"
        android:layout_marginTop="40dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_marginTop="30dp"
        android:background="#fff"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:text="用户名:"
            android:textSize="20dp"
            android:layout_width="100dp"
            android:gravity="center"
            android:layout_height="wrap_content" />


        <EditText
            android:id="@+id/Et_Register_Username"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="11"
            android:background="@null"
            />

        <ImageView
            android:id="@+id/Iv_Register_Nameclear"
            android:src="@drawable/user_account_password_delete"
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"/>

    </LinearLayout>

    <View
        android:background="@color/colorGray"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <LinearLayout

        android:background="#fff"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:text="密码:"
            android:textSize="20dp"
            android:layout_width="100dp"
            android:gravity="center"
            android:layout_height="wrap_content" />


        <EditText
            android:id="@+id/Et_Register_Password1"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="10dp"
            android:inputType="textPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="11"
            android:background="@null"
            />

        <ImageView
            android:id="@+id/Iv_Register_Password1"
            android:src="@drawable/user_account_password_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"/>

    </LinearLayout>

    <View
        android:background="@color/colorGray"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <LinearLayout

        android:background="#fff"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:text="确认密码:"
            android:textSize="20dp"
            android:layout_width="100dp"
            android:gravity="center"
            android:layout_height="wrap_content" />


        <EditText
            android:id="@+id/Et_Register_Password2"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="10dp"
            android:inputType="textPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="11"
            android:background="@null"
            />

        <ImageView
            android:id="@+id/Iv_Register_Password2"
            android:src="@drawable/user_account_password_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"/>

    </LinearLayout>


    <Button
        android:id="@+id/Btn_Register"
        android:layout_marginTop="20dp"
        android:background="@drawable/user_round_corner_un"
        android:padding="10dp"
        android:text="注册"
        android:textColor="#fff"
        android:textSize="18sp"
        android:layout_gravity="center"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:enabled="false"/>



</LinearLayout>