<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <TextView
        android:id="@+id/Tv_background"
        android:background="#fff"
        android:layout_width="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_height="60dp" />

    <ImageView
        android:id="@+id/Iv_img"
        android:src="@drawable/home_arror_left"
        app:layout_constraintLeft_toLeftOf="@id/Tv_background"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="40dp"
        android:layout_height="60dp" />

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:gravity="end"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/Iv_img"
        android:text="修改姓名"
        android:textSize="20dp" />


    <TextView
        app:layout_constraintTop_toBottomOf="@+id/Tv_background"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="15dp"
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="60dp" />

    <EditText
        android:id="@+id/Et_Name"
        app:layout_constraintTop_toBottomOf="@+id/Tv_background"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="15dp"
        android:background="@null"
        android:hint="请输入"
        android:layout_width="340dp"
        android:layout_height="60dp" />

    <TextView
        android:text="姓名"
        android:textSize="20dp"
        android:gravity="start"
        app:layout_constraintBaseline_toBaselineOf="@+id/Et_Name"
        app:layout_constraintTop_toBottomOf="@+id/Tv_background"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/Btn_Sure"
        android:layout_marginTop="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        app:layout_constraintTop_toBottomOf="@id/Et_Name"
        android:text="确定"
        android:textColor="#fff"
        android:background="#FF9800"
        android:layout_width="match_parent"
        android:layout_height="60dp" />





</android.support.constraint.ConstraintLayout>